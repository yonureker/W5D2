<h2>Create a new sub!</h2>
<form action="<%= subs_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <br>
  <label>Name
  <br>
    <input type="text" name="sub[title]" value="<%=@sub.title%>">
  </label>
  <br>
  <label>Description
  <br>
    <textarea name="sub[description]" value="<%=@sub.description%>" cols="30" rows="10"></textarea>
  </label>
  <br>
  <input type="submit" value="Submit">
  <br>
</form>